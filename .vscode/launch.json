    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug transformaciones",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/saludtech/transformaciones/api",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "Debug enriquecimiento",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/saludtech/enriquecimiento/api",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "8080"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}